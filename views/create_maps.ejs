  <script defer src="/scripts/app.js"></script>
  <script defer src="/scripts/create_marker.js"></script>
  <script>window.mapId = "<%= mapId %>"</script>
  <script>window.apiKey = "<%= apiKey %>"</script>
  <script>window.userId = "<%= user.id %>"</script>
</head>

<body>
  <%- include('partials/header') %>

    <h1>Add a Marker to <%= mapName.charAt(0).toUpperCase() + mapName.slice(1) %>'s map
    </h1>
    <div id="map" style="width: 100%; height: 500px;"></div>
    <button id="save-map-btn" style="margin: 20px 0;">Save Map</button>
</body>

</html>