<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <meta name="google" content="notranslate" />
  <title>Explore Maps</title>
  <meta name="description" content="MapMap lets you do fun stuff with maps." />
  <meta name="viewport" content="width=device-width, initial-scale=1" />

  <%- include('./partials/header') %>

  <link rel="stylesheet" href="/styles/layout.css" />
  <link rel="stylesheet" href="/styles/explore.css" />
  <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
  <script defer src="https://maps.googleapis.com/maps/api/js?key=AIzaSyDZP_5baVuXLOyz89W70mja_NN_L7RhwaU&callback=initMap"></script>
</head>

<body>
  <h1>Explore Maps</h1>

  <!-- Search bar -->
  <form id="city-search-form" class="city-search-form">
    <input type="text" id="city-input" name="city" placeholder="Search a city..." required />
    <button type="submit" id="search-btn">Search</button>
  </form>

  <!-- Search Result Map -->
  <div id="search-result-container" style="display: none;">
    <div id="map-wrapper">
      <button id="back-button">Back to All Cities</button>
      <div id="searched-map-container">
        <div id="searched-map"></div>
      </div>
    </div>
  </div>

  <!-- Featured maps grouped by continent -->
  <div id="featured-maps">
    <div class="city-groups">
      <div class="continents">
        <h2>North America</h2>
        <div class="map-card"><div id="mapLA" class="map-box"></div><p>Los Angeles</p></div>
        <div class="map-card"><div id="mapVan" class="map-box"></div><p>Vancouver</p></div>
        <div class="map-card"><div id="mapChicago" class="map-box"></div><p>Chicago</p></div>

        <h2>South America</h2>
        <div class="map-card"><div id="mapBuenosAires" class="map-box"></div><p>Buenos Aires</p></div>
        <div class="map-card"><div id="mapSaoPaulo" class="map-box"></div><p>SÃ£o Paulo</p></div>
        <div class="map-card"><div id="mapLima" class="map-box"></div><p>Lima</p></div>

        <h2>Europe</h2>
        <div class="map-card"><div id="mapLondon" class="map-box"></div><p>London</p></div>
        <div class="map-card"><div id="mapParis" class="map-box"></div><p>Paris</p></div>
        <div class="map-card"><div id="mapBerlin" class="map-box"></div><p>Berlin</p></div>

        <h2>Asia</h2>
        <div class="map-card"><div id="mapBeijing" class="map-box"></div><p>Beijing</p></div>
        <div class="map-card"><div id="mapSeoul" class="map-box"></div><p>Seoul</p></div>
        <div class="map-card"><div id="mapBangkok" class="map-box"></div><p>Bangkok</p></div>

        <h2>Africa</h2>
        <div class="map-card"><div id="mapCairo" class="map-box"></div><p>Cairo</p></div>
        <div class="map-card"><div id="mapNairobi" class="map-box"></div><p>Nairobi</p></div>
        <div class="map-card"><div id="mapCapeTown" class="map-box"></div><p>Cape Town</p></div>

        <h2>Oceania</h2>
        <div class="map-card"><div id="mapSydney" class="map-box"></div><p>Sydney</p></div>
        <div class="map-card"><div id="mapAuckland" class="map-box"></div><p>Auckland</p></div>
        <div class="map-card"><div id="mapSuva" class="map-box"></div><p>Suva</p></div>
      </div>
    </div>
  </div>

