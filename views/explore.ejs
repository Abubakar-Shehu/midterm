  };

    let map, marker;

    $(document).ready(() => {
      $('#city-search-form').on('submit', function (e) {
        e.preventDefault();
        const city = $('#city-input').val().trim().toLowerCase();
        const coords = cityCoords[city];

        if (!coords) {
          alert("City not found. Try another.");
          return;
        }

        $('#featured-maps').hide();
        $('#search-result-container').show();

        if (!map) {
          map = new google.maps.Map(document.getElementById("searched-map"), {
            center: coords,
            zoom: 10
          });

          marker = new google.maps.Marker({
            position: coords,
            map: map,
            title: city
          });
        } else {
          map.setCenter(coords);
          marker.setPosition(coords);
          marker.setTitle(city);
        }
      });

      $('#back-button').on('click', function () {
        $('#search-result-container').hide();
        $('#featured-maps').show();
        $('#city-input').val('');
      });
    });

    function initStaticMap(id, coords) {
      new google.maps.Map(document.getElementById(id), {
        center: coords,
        zoom: 10
      });
    }

    window.initMap = function () {
      initStaticMap('mapLA', cityCoords["los angeles"]);
      initStaticMap('mapVan', cityCoords["vancouver"]);
      initStaticMap('mapChicago', cityCoords["chicago"]);
      initStaticMap('mapBuenosAires', cityCoords["buenos aires"]);
      initStaticMap('mapSaoPaulo', cityCoords["sao paulo"]);
      initStaticMap('mapLima', cityCoords["lima"]);
      initStaticMap('mapLondon', cityCoords["london"]);
      initStaticMap('mapParis', cityCoords["paris"]);
      initStaticMap('mapBerlin', cityCoords["berlin"]);
      initStaticMap('mapBeijing', cityCoords["beijing"]);
      initStaticMap('mapSeoul', cityCoords["seoul"]);
      initStaticMap('mapBangkok', cityCoords["bangkok"]);
      initStaticMap('mapCairo', cityCoords["cairo"]);
      initStaticMap('mapNairobi', cityCoords["nairobi"]);
      initStaticMap('mapCapeTown', cityCoords["cape town"]);
      initStaticMap('mapSydney', cityCoords["sydney"]);
      initStaticMap('mapAuckland', cityCoords["auckland"]);
      initStaticMap('mapSuva', cityCoords["suva"]);
    }
  </script>
</body>
</html>
